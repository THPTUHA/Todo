<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../admin/layout/head'); %>
    <link rel="stylesheet" href="/static/theme/css/styles.css">
    <title>User</title>
</head>
<body>
    <div class="container">
        <section class="vh-100">
            <div class="container py-5 h-100">
              <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                  <div class="card" id="list1" style="border-radius: .75rem; background-color: #eff1f2;">
                    <div class="card-body py-4 px-4 px-md-5">
          
                      <p class="h1 text-center mt-3 mb-4 pb-3 text-primary">
                        <i class="fas fa-check-square me-1"></i>
                        <i>My Todo</i>
                      </p>
          
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>

          <div class="panel panel-default">
            <div class="panel-heading">
                Lists
            </div>
            <div class="panel-body">
                <div class="">
                    <table class="table  table-bordered table-hover">
                        <thead>
                            <tr style="text-align: center;">
                                <td style="width:20px">Done</td>
                                <td style="width:20px">Failure</td>
                                <td>Title</td>
                                <td>Content</td>
                                <td>Action</td>
                            </tr>
                        </thead>
                        <tbody  class="tbody" >
                          <%if(data.tasks.length){%>
                            <%for(var i=0;i<data.tasks.length;++i){%>
                              <tr class="task" pos="<%=i%>" id_task="<%=data.tasks[data.mp[i].num].id_task%>">
                                <th >
                                  <input class="form-check-input done" type="checkbox" <%if(data.tasks[data.mp[i].num].done){%>checked<%}%> check="<%=data.tasks[data.mp[i].num].done%>" id_task="<%=data.tasks[data.mp[i].num].id_task%>">
                                </th>
                                <th>
                                  <input class="form-check-input failure" type="checkbox" <%if(data.tasks[data.mp[i].num].failure){%>checked<%}%> check="<%=data.tasks[data.mp[i].num].failure%>" id_task="<%=data.tasks[data.mp[i].num].id_task%>">
                                </th>
                                <th class="title_task"><%=data.tasks[data.mp[i].num].title%></th>
                                <th class="content_task"><%=data.tasks[data.mp[i].num].content%></th>
                                <th>
                                    <button class="btn btn-primary edit" id_task="<%=data.tasks[data.mp[i].num].id_task%>">Edit</button>
                                    <button class="btn btn-danger delete" id_task="<%=data.tasks[data.mp[i].num].id_task%>">Delete</button>
                                </th>
                              </tr>
                            <%}%>
                          <%}%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- form add-->
        <div class="add_form" style="display: none;">
          <form  role="form" method="" action="">
            <div class="form-group">
                <label for="">Title</label>
                <input type="text" class="form-control title" name="title" placeholder="Title">
            </div>
            <div class="form-group">
                <label for="">Content</label>
                <textarea name="content" id="" class="form-control content" placeholder="Content"></textarea>
            </div>
            <input type="button" value="SAVE" class="btn btn-success save_form">
           </form>
        </div>


        <!-- add Task -->
          <div class="row" style="margin-bottom:10px;margin-top:30px;">
            <div class="col-md-12">
                <a href="#" class="btn btn-success add_task">Add New Task</a> 
            </div>
         </div>
    </div>
    <script src="/static/theme/js/scripts.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js" type="text/javascript"></script>
</body>
</html>